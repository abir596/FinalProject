@model SocialMedia.Models.Post

@{
    ViewData["Title"] = "Edit Post";
}

<h1>Edit Post</h1>



    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="EditPost">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="post_id" />
                <div class="form-group">
                    <label asp-for="post_txt" class="control-label"></label>
                    <input asp-for="post_txt" class="form-control" />
                    <span asp-validation-for="post_txt" class="text-danger"></span>
                    <input type="hidden" asp-for="post_date" />
                    <input type="hidden" asp-for="post_like" />
                    <input type="hidden" asp-for="AccountID" />
                </div>                
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="text-white bg-success" style="padding:0 5px 0 5px; border-radius:5px; text-decoration-line:none;">Go Back To Your Account</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
