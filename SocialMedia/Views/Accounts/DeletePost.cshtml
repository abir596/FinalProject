@model SocialMedia.Models.Post

@{
    ViewData["Title"] = "Delete Post";
}

<h1>Are you sure you want to delete this Post?</h1>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.post_txt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.post_txt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.post_date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.post_date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.post_like)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.post_like)
        </dd>
    </dl>

    <form asp-action="DeletePost">
        <input type="hidden" asp-for="post_id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="text-white bg-success" style="padding:0 5px 0 5px; border-radius:5px; text-decoration-line:none;">Go Back To Your Account</a>
    </form>
</div>
