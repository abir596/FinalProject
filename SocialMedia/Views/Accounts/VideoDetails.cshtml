@model SocialMedia.Models.VideoFiles

@{
    ViewData["Title"] = "Details";
}

<h1>Video Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FileName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FileName)
        </dd>
        <dt class="col-sm-2">
            Uploaded Video on @Html.DisplayFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            <video src="@Url.Content("~/Video/" + Model.FileName)" width="500" height="400" preload controls loop>
            </video><br />
        </dd>        
    </dl>
</div>
<div>
    <a asp-action="EditVideo" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index" class="text-white bg-success" style="padding:0 5px 0 5px; border-radius:5px; text-decoration-line:none;">Go Back To Your Account</a>
</div>
