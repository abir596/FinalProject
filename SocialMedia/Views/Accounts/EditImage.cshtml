@model SocialMedia.Models.ImageModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Image</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditImage">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ImageId" />
            <input type="hidden" asp-for="AccountID" />
            <input type="hidden" asp-for="ImageFile" />
            <input type="hidden" asp-for="Date" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="ImageName" type="hidden" />
                <span asp-validation-for="ImageName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h3>Uploaded Image</h3>
            </div>
            <div class="form-group">
                <img src="@("~/Image/"+Model.ImageName)" asp-append-version="true" width="250px" height="250px" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="text-white bg-success" style="padding:0 5px 0 5px; border-radius:5px; text-decoration-line:none;">Go Back To Your Account</a>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
